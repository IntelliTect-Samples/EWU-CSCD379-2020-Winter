@model SecretSanta.Web.Api.GiftInput

    <form asp-route="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="Title"></label>
            <div class="control">
                <input class="input" type="text" asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="Description"></label>
            <div class="control">
                <input class="input" type="text" asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="Url"></label>
            <div class="control">
                <input class="input" type="text" asp-for="Url" />
                <span asp-validation-for="Url"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="UserId"></label>
            <div class="control">
                <input class="input" type="text" asp-for="UserId" />
                <span asp-validation-for="UserId"></span>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button id="submit" onclick="setAttribute('disabled', 'disabled');" class="button is-primary">Submit</button>
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Cancel</a>
            </div>
        </div>
    </form>