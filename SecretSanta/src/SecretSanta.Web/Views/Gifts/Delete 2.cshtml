@model Gift

<h2>Are you sure you want to delete the following gift?</h2>
<form asp-route="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="field">
        <label class="label" asp-for="Title"></label>: <span>@Model.Title</span>
    </div>
    <div>
        <label class="label" asp-for="Description"></label>: <span>@Model.Description</span>
    </div>
    <div class="field">
        <label class="label" asp-for="Url"></label>: <span>@Model.Url</span>
    </div>
    <div>
        <label class="label" asp-for="UserId"></label>: <span>@Model.UserId</span>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-primary">Yes</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">No</a>
        </div>
    </div>
</form>