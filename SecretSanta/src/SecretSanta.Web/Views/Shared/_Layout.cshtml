<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Stylesheets -->
    
    <link href="~/css/main.51bddec36c1efeaf6f5e.css" rel="stylesheet" />
    
    <!-- End Stylesheets -->
    <style>
        input.input-validation-error {
            border-color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar" role="navigation">
        <div class="navbar-item">
            <a class="navbar-item" asp-controller="Home" asp-action="Index">Secret Santa</a>
        </div>
        <div>
            <a class="navbar-item" asp-controller="Users" asp-action="Index">Users</a>
            <a class="navbar-item" asp-controller="Groups" asp-action="Index">Groups</a>
            <a class="navbar-item" asp-controller="Gifts" asp-action="Index">Gifts</a>
        </div>
    </nav>
    <div>
        <section class="section">
            <div class="content">
                @RenderBody()
            </div>
        </section>
    </div>
    <!-- Scripts -->
    
    <script src="~/js/main.51bddec36c1efeaf6f5e.js"></script>
    
    <!-- End Scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
