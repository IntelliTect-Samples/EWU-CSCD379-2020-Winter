<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <!-- Stylesheets -->
    
    <link href="~/css/main.f6cd832a9b9dbc732922.css" rel="stylesheet"/>
    
    <!-- End Stylesheets -->
    <style>
        input.input-validation-error {
            border-color: red;
        }
    </style>
</head>
<body>
<nav class="navbar" role="navigation">
    <div class="navbar-brand" style="margin: 0 10px">
        <a class="navbar-item" asp-controller="Home" asp-action="Index">Secret Santa</a>
    </div>
    <div class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item" asp-controller="Users" asp-action="Index">Users</a>
            <a class="navbar-item" asp-controller="Gifts" asp-action="Index">Gifts</a>
            <a class="navbar-item" asp-controller="Groups" asp-action="Index">Groups</a>
        </div>
    </div>
</nav>
<section class="section">
    <div class="content">
        @RenderBody()
    </div>
</section>
<!-- Scripts -->

<script src="~/js/main.f6cd832a9b9dbc732922.js"></script>

<!-- End Scripts -->
@RenderSection("scripts", false)
</body>
</html>