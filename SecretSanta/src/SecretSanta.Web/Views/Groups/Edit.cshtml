@model Gift

    <form asp-route="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="field">
            <label class="label" asp-for="Title">Title</label>
            <div class="control">
                <input class="input" type="text" asp-for="Title" />
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-primary">Submit</button>
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Cancel</a>
            </div>
        </div>
    </form>