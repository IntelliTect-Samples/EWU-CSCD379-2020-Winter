@model User

<p>
    <header>Delete Group</header>
</p>
<form asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id">
    <table class="table">
        <thead>
        <tr>
            <th asp-display-name-for="Id"></th>
            <th asp-display-name-for="FirstName"></th>
            <th asp-display-name-for="LastName"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td asp-display-for="Id"></td>
            <td asp-display-for="FirstName"></td>
            <td asp-display-for="LastName"></td>
        </tr>
        </tbody>
    </table>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-primary">Delete</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">Cancel</a>
        </div>
    </div>
</form>
