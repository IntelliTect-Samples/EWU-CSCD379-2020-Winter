@model SecretSanta.Web.Api.UserInput

    <form asp-route="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="FirstName"></label>
            <div class="control">
                <input class="input" type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="LastName"></label>
            <div class="control">
                <input class="input" type="text" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="SantaId"></label>
            <div class="control">
                <input class="input" type="text" asp-for="SantaId" />
                <span asp-validation-for="SantaId"></span>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button id="submit" onclick="setAttribute('disabled', 'disabled');" class="button is-primary">Submit</button>
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Cancel</a>
            </div>
        </div>
    </form>