@model User

    <form asp-route="Delete">
        
        <div class="field">
            <label class="label" asp-for="Id">Id</label>
            <div class="control">
                <input class="input" type="text" asp-for="Id" />
            </div>
        </div>
        <input type="hidden" asp-for="FirstName" />
        <input type="hidden" asp-for="LastName" />
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-primary">Submit</button>
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Cancel</a>
            </div>
        </div>
    </form>